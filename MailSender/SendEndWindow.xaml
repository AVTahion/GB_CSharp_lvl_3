<Window x:Class="MailSender.SendEndWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender"
        mc:Ignorable="d"
        Title="SendEndWindow" Height="150" Width="350" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <!--<Grid.Background>
            <SolidColorBrush Color="{DynamicResource PrimaryColor}"/>
        </Grid.Background>-->
        <Label x:Name="lSendEnd" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="22" Margin="0,25,0,0" FontWeight="Bold" Foreground="#FF0E8014">Письмо отправлено.</Label>
        <Button x:Name="btnOK" Content="OK" Margin="100,65,100,0" VerticalAlignment="Center" Click="BtnOK_Click"/>
    </Grid>
</Window>

<Window x:Class="MailSender.WPFTest.WpfMailSender"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender.WPFTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <SolidColorBrush Color="{DynamicResource {x:Static SystemColors.ActiveCaptionColorKey}}"/>
        </Grid.Background>
        <Button x:Name="btnSendEmail" Content="Отправить письмо" HorizontalAlignment="Left" Margin="85,149,0,0" VerticalAlignment="Top" Click="btnSendMail_Click">
        </Button>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="245,97,0,0" VerticalAlignment="Top" Password="password" Width="100"/>
    </Grid>
</Window>

<Window x:Class="MailSender.WpfMailSender"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MailSender"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <!--<Grid.Background>
            <SolidColorBrush Color="{DynamicResource PrimaryColor}"/>
        </Grid.Background>-->
        <Button x:Name="btnSendEmail" Content="Отправить письмо" HorizontalAlignment="Left" Margin="58,220,0,0" VerticalAlignment="Top" Click="btnSendMail_Click">
        </Button>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="58,156,0,0" VerticalAlignment="Top" Password="password" Width="100"/>
        <TextBox x:Name="txtBoxSubject" HorizontalAlignment="Left" Height="23" Margin="58,48,0,0" TextWrapping="Wrap" Text="Тема письма" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>
